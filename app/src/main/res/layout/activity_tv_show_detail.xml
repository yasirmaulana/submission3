<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tvshow_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6726F6F"
    tools:context=".TvShowDetailActivity">

    <!--<ProgressBar-->
        <!--android:id="@+id/progressBar4"-->
        <!--style="?android:attr/progressBarStyle"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:visibility="gone"/>-->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/img_tvshow_poster_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/poster_a_star_width" />

        <LinearLayout
            android:id="@+id/linearLayout_tvshow"
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:background="#FB111111"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_tvshow_poster_detail" />

        <ImageView
            android:id="@+id/img_tvshow_photo_detail"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout_tvshow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linearLayout_tvshow" />

        <TextView
            android:id="@+id/tv_tvshow_title_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout_tvshow"
            app:layout_constraintStart_toEndOf="@+id/img_tvshow_photo_detail"
            app:layout_constraintTop_toTopOf="@+id/linearLayout_tvshow"
            tools:text="Judul movie" />


        <TextView
            android:id="@+id/tv_tvshow_userscore_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/img_tvshow_photo_detail"
            app:layout_constraintTop_toBottomOf="@+id/tv_tvshow_title_detail"
            tools:text="75%" />

        <TextView
            android:id="@+id/str_userscore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="@string/user_score"
            android:textColor="@android:color/white"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout_tvshow"
            app:layout_constraintStart_toEndOf="@+id/tv_tvshow_userscore_detail"
            app:layout_constraintTop_toBottomOf="@+id/tv_tvshow_title_detail" />

        <TextView
            android:id="@+id/str_playtrailer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:drawableStart="@drawable/ic_play_arrow_black_24dp"
            android:text="@string/play_trailer"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="19sp"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout_tvshow"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout_tvshow"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/img_tvshow_photo_detail"
            app:layout_constraintTop_toBottomOf="@+id/tv_tvshow_userscore_detail"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/str_overview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/overview"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout_tvshow" />

        <TextView
            android:id="@+id/tv_tvshow_overview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/white"
            android:textSize="19sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/str_overview"
            app:layout_constraintVertical_bias="1.0"
            tools:text="overview movie" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>